<Window x:Class="SharedComponents.EVE.Windows.EmailChallengeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Email verification required" Height="200" Width="640">
    <DockPanel>
        <DockPanel DockPanel.Dock="Bottom" Margin="5,0,5,5">
            <Button DockPanel.Dock="Right" Name="buttonGo"  Content="OK" VerticalAlignment="Top" Width="75" Click="buttonGo_Click" IsDefault="True" />
            <TextBlock>Complete E-mail verification, and then try again.</TextBlock>
        </DockPanel>
        <WebBrowser Name="webBrowser" DockPanel.Dock="Top" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="5" />
    </DockPanel>
</Window>