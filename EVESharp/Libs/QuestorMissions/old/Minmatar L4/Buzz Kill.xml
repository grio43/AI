<?xml version="1.0" encoding="utf-8" ?>
<mission>
  <!-- http://eve-survival.org/wikka.php?wakka=BuzzKill4an -->
  <!-- note: this mission pretty much requires a target painter (or 2!) -->
  <pockets>
    <pocket id="0">
	  <orbitdistance>60000</orbitdistance> <!-- only used if speed tank is true in character config -->
      <actions>
		<action name="Ignore"> <!-- ignore Second Group - Chain B1  -->
          <parameter name="Add" value="Arch Gistii Hunter" />
		  <parameter name="Add" value="Arch Gistii Impaler" />
		</action>
		<action name="Kill"> <!-- Initial Group -->
          <parameter name="target" value="Arch Gistum Centurion" />
		  <parameter name="target" value="Arch Gistum Phalanx" />
		  <parameter name="BreakOnAttackers" value="False" />
        </action>
		<action name="Kill"> <!-- Second Group - Chain A1 -->
          <parameter name="target" value="Arch Gistii Ruffian" />
		  <parameter name="target" value="Arch Gistii Thug" />
		  <parameter name="BreakOnAttackers" value="False" />
		</action>
		<action name="Kill"> <!-- Second Group - Chain A2 -->
          <parameter name="target" value="Arch Gistii Ruffian" />
		  <parameter name="target" value="Arch Gistii Nomad" />
		  <parameter name="BreakOnAttackers" value="False" />
		</action>
		<action name="Kill"> <!-- Second Group - Chain A3 -->
          <parameter name="target" value="Arch Gistum Centurion" />
		  <parameter name="target" value="Arch Gistum Phalanx" />
		  <parameter name="BreakOnAttackers" value="False" />
		</action>
		<action name="Kill"> <!-- Second Group - Chain A4 -->
          <parameter name="target" value="Arch Gistii Thug" />
		  <parameter name="target" value="Arch Gistii Outlaw" />
		  <parameter name="target" value="Arch Gistior Sezer" />
		  <parameter name="target" value="Arch Gistum Defeater" />
		  <parameter name="target" value="Arch Gistum Breaker" />
		  <parameter name="BreakOnAttackers" value="False" />
		</action>
		<action name="Kill"> <!-- Final Group -->
          <parameter name="target" value="Gist Warlord" />
		  <parameter name="target" value="Gist Saint" />
		  <parameter name="BreakOnAttackers" value="False" />
		</action>
		<action name="Ignore">
          <parameter name="Clear" value="true" />
        </action>
        <action name="ClearPocket" />
        <action name="Done" />
      </actions>
    </pocket>
  </pockets>
</mission>
