<?xml version="1.0" encoding="utf-8"?>
<mission>
  <pockets>
    <pocket id="0">
       
      <actions>
		<action name="ClearPocket" />
        <action name="Activate">
          <parameter name="Target" value="Acceleration Gate" />
        </action>
      </actions>
    </pocket>
    <pocket id="1">
      <actions>
		<action name="MoveToBackground"> <!-- initiate movement to to the "target" and move on to the next action, using this action assumes that the actions used after this will not move the ship as we likely need to stay moving toward the target-->
			<parameter name="Target" value="Kayzum Mother Drone" />
			<parameter name="Distance" value="45000"/>
        </action>
        <action name="Kill">
			<parameter name="Target" value="Kayzum Mother Drone" />
        </action>
		<action name="MoveToBackground"> <!-- initiate movement to to the "target" and move on to the next action, using this action assumes that the actions used after this will not move the ship as we likely need to stay moving toward the target-->
			<parameter name="Target" value="Elite Drone Parasite Wreck" />
			<parameter name="Distance" value="47000"/>
        </action>
        <action name="ClearPocket" />
		<action name="LootItem"> <!-- this loots the field if LootEverything is true, if False it only loots item below then moves on --> 
			<parameter name="Item" value="Elite Drone AI" />
			<parameter name="Target" value="Elite Drone Parasite Wreck" />
			<parameter name="Quantity" value="1" />
		</action>
		<action name="WaitUntilTargeted">
			<parameter name="Timeout" value="15" />
        </action>
        <action name="ClearPocket" />
        <action name="Activate">
          <parameter name="Target" value="Acceleration Gate" />
        </action>
      </actions>
    </pocket>
    <pocket id="2">
      <actions>
        <action name="WaitUntilTargeted">
          <parameter name="Timeout" value="15" />
        </action>
        <action name="ClearPocket" />
        <action name="Done" />
      </actions>
    </pocket>
  </pockets>
</mission>